datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
    id            Int     @id @default(autoincrement())
    name          String @unique
    image         String   
    price         String   
    category      String   
    product_type  String  
    brand         String   
    material      String   
    product_link  String  
    style         String 
    description   String
}



model User{
  user_id Int @id
  product_id Int
}

